<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.LauncherController">
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
   <children>
      <Label styleClass="title-label" text="BPark Parking Management System" />
      <Label styleClass="subtitle-label" text="Select Application Mode" />
      <Button fx:id="clientButton" mnemonicParsing="false" onAction="#launchClientMode" prefWidth="200.0" styleClass="client-button" text="Client Portal" />
      <Button fx:id="kioskButton" mnemonicParsing="false" onAction="#launchKioskMode" prefWidth="200.0" styleClass="kiosk-button" text="Kiosk Terminal" />
   </children>
</VBox>